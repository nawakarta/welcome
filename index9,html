<script>
  // --- DATA ---
  const data = [
    {
      id: 1, name: 'About Me', 
      desc: 'Web & Network Specialist', 
      color: '#ec4899', initials: 'ME',
      chats: [
        "Hi! Saya adalah **Web & Network Specialist**.",
        "Pengalaman: **20 Tahun** di industri IT (ISP & Web Dev).",
        "Fokus utama saya adalah membangun infrastruktur jaringan yang stabil dan sistem web yang handal."
      ]
    },
    {
      id: 2, name: 'Experience', 
      desc: 'ISP, Network Admin, IT Support', 
      color: '#f59e0b', initials: 'XP',
      chats: [
        "**2005 - 2010: Network Administrator & Developer**\nDi sebuah Internet Service Provider (ISP).",
        "**Job Desk:**\nMembuat dan merawat jaringan untuk 5000+ pelanggan menggunakan Mikrotik, Cisco, dan OpenBSD.",
        "**Server Management:**\nDevelop sendiri Proxy server (Squid), DNS, Mail, Hosting, dan RAS server.",
        "**Infrastructure:**\nDesain NOC dan membangun tower jaringan Wireless menggunakan Ubiquiti dan D-Link.",
        "**2009 - Sekarang: IT Freelance**\nBerbagai proyek IT dan Networking.",
        "**2009 - Sekarang: IT Support**\nDi sebuah perusahaan Snack ternama."
      ]
    },
    {
      id: 3, name: 'Featured Projects', 
      desc: 'Indobilling, GeekCloud, IoT', 
      color: '#3b82f6', initials: 'PJ',
      chats: [
        "1. **Indobilling (2008)**\nSistem billing warnet, peran sebagai Security Tester dan Debugger.",
        "2. **GeekCloud (2015)**\nCloud Management dan sistem billing untuk layanan Cloud.",
        "3. **Geek IoT (2017)**\nProyek robotika berbasis Arduino dan ESP."
      ]
    },
    {
      id: 4, name: 'My Hobby', 
      desc: 'Basketball, Reading', 
      color: '#10b981', initials: 'HB',
      chats: [
        "Hidup Di Luar Layar üéâ",
        "Kalo Lagi Nggak Ngoding:\nüèÄ Nonton atau ngelatih basket (3x seminggu)\nüóª Rencanain acara jalan-jalan ama keluarga ato teman\nüìö Baca buku atau browsing\n‚òï Ngopi sini-sana sambil ngrumpi :D"
      ]
    }
  ];

  // --- ELEMENTS ---
  const appContainer = document.getElementById('appContainer');
  const contactList = document.getElementById('contactList');
  const welcomeState = document.getElementById('welcomeState');
  const chatInterface = document.getElementById('chatInterface');
  const messagesBox = document.getElementById('messagesBox');
  const chatName = document.getElementById('chatName');

  // --- RENDER SIDEBAR ---
  data.forEach((item, index) => {
    const el = document.createElement('div');
    el.className = 'contact-item';
    el.innerHTML = `
      <div class="avatar" style="background:${item.color}">${item.initials}</div>
      <div class="info">
        <div class="name">${item.name}</div>
        <div class="preview">${item.desc}</div>
      </div>
    `;
    el.onclick = () => openChat(index);
    contactList.appendChild(el);
  });

  // --- FUNCTIONS ---
  function openChat(index) {
    document.querySelectorAll('.contact-item').forEach(e => e.classList.remove('active'));
    document.querySelectorAll('.contact-item')[index].classList.add('active');

    welcomeState.classList.add('hidden');
    chatInterface.classList.add('active');
    
    if (window.innerWidth <= 768) {
      appContainer.classList.add('mobile-chat-open');
    }

    const selected = data[index];
    chatName.innerText = selected.name;

    messagesBox.innerHTML = '';
    let i = 0;
    
    function typeNext() {
      if (i < selected.chats.length) {
        const div = document.createElement('div');
        div.className = 'bubble';
        div.innerHTML = selected.chats[i]
          .replace(/\*\*(.*?)\*\*/g, '<b>$1</b>')
          .replace(/\n/g, '<br>');
        
        div.innerHTML += `<span class="time">Just now</span>`;
        
        messagesBox.appendChild(div);
        messagesBox.scrollTop = messagesBox.scrollHeight;
        i++;
        setTimeout(typeNext, 600); 
      }
    }
    typeNext();
  }

  function closeChat() {
    appContainer.classList.remove('mobile-chat-open');
  }

</script>

